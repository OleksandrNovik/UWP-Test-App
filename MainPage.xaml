<Page
    x:Class="SecondApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:SecondApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:common="using:SecondApp.Common"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <Style x:Key="LabeledInputArea" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Vertical" />
            <Setter Property="Padding" Value="10" />
        </Style>
        <common:EditedUserConverter x:Key="EditConverter" />
    </Page.Resources>
    
    <Grid Margin="0 10 0 0">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="90" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <StackPanel Style="{StaticResource LabeledInputArea}">
                    <TextBlock Text="First Name" />
                    <TextBox Margin="0 0 10 0" Text="{Binding CurrentFirstName, Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Grid.Column="1" Style="{StaticResource LabeledInputArea}">
                    <TextBlock Text="Last Name" />
                    <TextBox Margin="0 0 10 0" Text="{Binding CurrentLastName, Mode=TwoWay}" />
                </StackPanel>
                <Button 
                 Grid.Column="2" 
                 Content="Add" 
                 Command="{Binding AddUserCommand}"/>
            </Grid>

            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid Margin="30 0 0 5">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                        <ColumnDefinition />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <TextBlock Text="First Name" />
                    <TextBlock Grid.Column="1" Text="Last Name" />

                </Grid>
                <GridView  Grid.Row="1" ItemsSource="{Binding Users}" Padding="20">

                    <GridView.ItemContainerStyle>
                        <Style TargetType="GridViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </GridView.ItemContainerStyle>

                    <GridView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Vertical" />
                        </ItemsPanelTemplate>
                    </GridView.ItemsPanel>

                    <GridView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                    <ColumnDefinition />
                                </Grid.ColumnDefinitions>

                                <TextBox 
                                    VerticalAlignment="Center"
                                    Text="{Binding FirstName, Mode=TwoWay}"
                                    Visibility="{Binding IsEdited, Converter={StaticResource EditConverter}}"
                                    />
                                <TextBox 
                                    VerticalAlignment="Center"
                                    Grid.Column="1" 
                                    Text="{Binding LastName, Mode=TwoWay}"
                                    Visibility="{Binding IsEdited, Converter={StaticResource EditConverter}}"
                                    />
                                <TextBlock 
                                    Visibility="{Binding IsEdited, Converter={StaticResource EditConverter}, ConverterParameter=Inverted}"
                                    VerticalAlignment="Center" 
                                    Text="{Binding FirstName}" />
                                <TextBlock 
                                    Visibility="{Binding IsEdited, Converter={StaticResource EditConverter}, ConverterParameter=Inverted}"
                                    VerticalAlignment="Center" 
                                    Grid.Column="1" 
                                    Text="{Binding LastName}" />
                                <Grid Column="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition />
                                        <ColumnDefinition />
                                    </Grid.ColumnDefinitions>

                                    <Button 
                                        Command="{Binding EditUserCommand, Source={StaticResource MainDataContext}}"
                                        CommandParameter="{Binding}" 
                                        Content="{Binding IsEdited, Converter={StaticResource EditConverter} }" />

                                    <Button Grid.Column="1"
                                        Command="{Binding DeleteUserCommand, Source={StaticResource MainDataContext}}"
                                        CommandParameter="{Binding}"
                                        Content="Delete" />
                                </Grid>
                            </Grid>
                        </DataTemplate>
                    </GridView.ItemTemplate>

                </GridView>
            </Grid>

        </Grid>
    </Grid>
</Page>
